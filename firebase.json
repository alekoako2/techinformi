{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "ka/**",
        "destination": "/ka/index.html"
      },
      {
        "source": "en/**",
        "destination": "/en/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/ka",
        "type": 301
      }
    ]
  }
}
